<%- include ('../../partials/head') %>
<body class="body">
    <%- include ('../../partials/header') %>
    <main class="main">
        <div class="main-header-space"></div>
        <section class = "container">
            <section class="detail-img">
                <div>
                    <img src="/images/imgPerfume/<%= unProducto.image %>" alt="imagen perfume">
                </div>
            </section>
        <section class = "product">
            <div class="detail-product">
               <p>id: <%= unProducto.id %></p>
            </div>
            <div class="detail-product">
                <p>mark: <%= unProducto.mark %></p>
            </div>
            <div class="detail-product">
                <p>model: <%= unProducto.model %></p>
            </div>
            <div class="detail-product">
                <p>gender:  <%= unProducto.gender %></p>
            </div>
            <div class="detail-product">
                <p>size: <%= unProducto.size %></p>
            </div>
            <div class="detail-product">
                <p>price: <%= unProducto.price %></p>
            </div>
            <div class="outlet">
                <% if (unProducto.outlet == 1){ %>
                    <p> outlet s√≠</p>
                <% }; %>
                <% if (unProducto.outlet == 0){ %>
                    <p> outlet no</p>
                <% }; %>
            </div>
        
            
        
    </section>
    </section>
        <section class="btns">
            <div class="a">
            <h4><a href="/administrar">volver</a></h4>
        </div>
        <div class="a">
            <h4><a href="/administrar/editar/<%= unProducto.id %>">editar</a></h4>
        </div>
        </section>
    </main>    
    <%- include ('../../partials/footer') %>
</body>
</html>