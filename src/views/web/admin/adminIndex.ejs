<%- include ('../../partials/head') %>
<body class="body">
    <%- include ('../../partials/header') %>
    <main class="main">
        <div class="main-header-space"></div>
        <div class="h4">
            <h4>Productos</h4>
        </div>
        <section class="btns-ck">
            <a class="a" href="/administrar/crear">crear<i id='plus' class="fas fa-plus-circle"></i></a>
        </section>
        <section class="articles-selection">
        <table class = "table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">marca</th>
                    <th scope="col">modelo</th>
                    <th class="none" scope="col">g√©nero</th>
                    <th scope="col">ver</th>
                    <th scope="col">editar</th>
                    <th scope="col">eliminar</th>
                </tr>
            </thead>
            <tbody>
                <%# for( let i = 0; i < products.length; i++ ) { %>
                <% products.forEach(function (products) { %>
                    <tr>
                        <td> <%= products.id %> </td>
                        <td> <%= products.mark.mark %> </td>
                        <td> <%= products.model.model %> </td>
                        <td class="none"> <%= products.genre.genre %> </td>
                        <td><a href="/administrar/visualizar/<%= products.id %>"><i class="fas fa-eye"></i></a></td>
                        <td><a href="/administrar/editar/<%= products.id %>"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/administrar/eliminar/<%= products.id %>"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        </section>
    </main>    
    <%- include ('../../partials/footer') %>
</body>
</html>