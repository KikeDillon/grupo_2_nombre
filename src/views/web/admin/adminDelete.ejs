<%- include ('../../partials/head') %>
<body class="body">
    <%- include ('../../partials/header') %>
    <main class="main">
        <div class="main-header-space"></div>
        <section class = "container">
            <section class="detail-img">
            <div>
                <img src="/images/imgPerfume/<%= products.image %>" alt="imagen perfume">
            </div>
            </section>
            <section class="product">
            <div class="detail-product">
                <p>id: <%= products.id %></p>
            </div>
            <div class="detail-product">
                <p>mark: <%= products.mark.mark %></p>
            </div>
            <div class="detail-product">
                <p>model: <%= products.model.model %></p>
            </div>
            <div class="detail-product">
                <p>genre: <%= products.genre.genre %></p>
            </div>
            <div class="detail-product">
                <p>size: <%= products.measure.measure %></p>
            </div>
            <div class="detail-product">
                <p>price: <%= products.price %></p>
            </div>
            <div class="outlet">
                <% if (products.outlet == 1){ %>
                    <p> outlet: sí</p>
                <% }; %>
                <% if (products.outlet == 0){ %>
                    <p> outlet: no</p>
                <% }; %>
            </div>
            <div class="outlet">
                <% if (products.destacado == 1){ %>
                    <p> destacados: sí</p>
                <% }; %>
                <% if (products.destacado == 0){ %>
                    <p> destacados: no</p>
                <% }; %>
            </div>
        </section>
        </section>
        <form action="/administrar/eliminado/<%= products.id %> " method="GET" enctype="multipart/form-data">
            <section class="btns">
            <div class="btn-destroy">
                <button id="btn-destroy" type="submit"> confirmar </button>
            </div>       
            <div class="a">   
            <a  href="/administrar"><button>volver</button></a>
            </div>
        </section>
    </form>
    </main>    
    <%- include ('../../partials/footer') %>
</body>
</html>